@model HelenaGrace.Models.Design

<h4>Upload Tattoo Design</h4>
<hr />
<p style="color:green">@ViewData["Success"]</p><p style="color:red">@ViewData["Fail"]</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadDesign" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Picture" type="file" class="custom-file-input">
                </div>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="(Optional)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
