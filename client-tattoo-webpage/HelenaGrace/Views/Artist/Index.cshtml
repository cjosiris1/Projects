@model HelenaGrace.Models.User
@using Microsoft.AspNetCore.Http;

<div>
    <h4>About Me</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
    </dl>
</div>
<div>
    @if (Context.Session.GetInt32("loggedIn") != null)
    {
        <div class="btn-group" role="group">
            <input type="submit" value="Edit Profile" class="btn btn-primary" onclick="location.href='@Url.Action("UpdateProfileView", "Artist")'"/>
        </div>
    }
</div>
